package com.example.crudproject.controller;

import com.example.crudproject.model.MongoPerson;
import com.example.crudproject.repository.MongoPersonRepository;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/mongo")
public class MongoPersonController {

    private final MongoPersonRepository mongoRepo;

    public MongoPersonController(MongoPersonRepository mongoRepo) { this.mongoRepo = mongoRepo; }

    @GetMapping
    public List<MongoPerson> getAll() {
        return mongoRepo.findAll();
    }

    @PostMapping
    public ResponseEntity<MongoPerson> create(@RequestBody MongoPerson person) {
        MongoPerson saved = mongoRepo.save(person);
        return ResponseEntity.ok(saved);
    }

    @GetMapping("/{id}")
    public ResponseEntity<MongoPerson> getById(@PathVariable String id) {
        return mongoRepo.findById(id).map(ResponseEntity::ok).orElse(ResponseEntity.notFound().build());
    }

    @DeleteMapping("/{id}")
    public ResponseEntity<Void> delete(@PathVariable String id) {
        return mongoRepo.findById(id).map(p -> {
            mongoRepo.delete(p);
            return ResponseEntity.noContent().build();
        }).orElse(ResponseEntity.notFound().build());
    }
}
